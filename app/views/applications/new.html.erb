<h2>Başvuru Yap</h2>

<%= form_for [@position, @application] do |f| %>
  <% if @application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h2>
      <ul>
        <% @application.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :resume %>
    <%= f.file_field :resume, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cover_letter %>
    <%= f.text_area :cover_letter, class: "form-control" %>
  </div>

  <%= f.submit "Başvur", class: "btn btn-primary" %>
<% end %>
