    e.stopPropagation();
    closeModal();
  });

  notificationModal.addEventListener('click', function(e) {
    if (e.target === this) {
      closeModal();
    }
  });

  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && notificationModal.classList.contains('show')) {
      closeModal();
    }
  });
});
