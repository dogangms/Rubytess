<script>
document.addEventListener('DOMContentLoaded', function() {
  // Bildirim zili tıklama olayı
  const notificationBell = document.querySelector('.notification-bell');
  const notificationDropdown = document.querySelector('.notification-dropdown');
  
  notificationBell.addEventListener('click', function(e) {
    e.stopPropagation();
    notificationDropdown.classList.toggle('show');
  });

  // Sayfa herhangi bir yerine tıklandığında dropdown'ı kapat
  document.addEventListener('click', function(e) {
    if (!notificationBell.contains(e.target)) {
      notificationDropdown.classList.remove('show');
    }
  });

  // Bildirimleri okundu olarak işaretleme
  const markReadButtons = document.querySelectorAll('.mark-read');
  markReadButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.stopPropagation();
      const notificationItem = this.closest('.notification-item');
      notificationItem.classList.remove('unread');
      updateNotificationCount();
    });
  });

  // Tüm bildirimleri okundu olarak işaretleme
  const markAllReadButton = document.querySelector('.mark-all-read');
  markAllReadButton.addEventListener('click', function(e) {
    e.stopPropagation();
    const unreadNotifications = document.querySelectorAll('.notification-item.unread');
    unreadNotifications.forEach(notification => {
      notification.classList.remove('unread');
    });
    updateNotificationCount();
  });

  // Bildirim sayısını güncelleme
  function updateNotificationCount() {
    const unreadCount = document.querySelectorAll('.notification-item.unread').length;
    const badge = document.querySelector('.notification-badge');
    
    if (unreadCount === 0) {
      badge.style.display = 'none';
    } else {
      badge.style.display = 'flex';
      badge.textContent = unreadCount;
    }
  }

  // Bildirim öğelerine tıklama olayı
  const notificationItems = document.querySelectorAll('.notification-item');
  notificationItems.forEach(item => {
    item.addEventListener('click', function(e) {
      if (!e.target.closest('.notification-actions')) {
        // Bildirime tıklandığında yapılacak işlem
        this.classList.remove('unread');
        updateNotificationCount();
      }
    });
  });

  // Silme butonları için olay dinleyicisi
  const deleteButtons = document.querySelectorAll('.delete-notification');
  deleteButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.stopPropagation();
      const notificationItem = this.closest('.notification-item');
      notificationItem.style.animation = 'fadeOut 0.3s ease forwards';
      
      setTimeout(() => {
        notificationItem.remove();
        updateNotificationCount();
      }, 300);
    });
  });

  // Başlangıçta bildirim sayısını güncelle
  updateNotificationCount();
});
</script>

