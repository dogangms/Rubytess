<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card bg-dark text-white border-purple">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <i class="bi bi-gem-fill text-primary display-4"></i>
            <h2 class="mt-3 mb-4 text-primary">Şirket Kaydı</h2>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
            <% if resource.errors.any? %>
              <div class="alert alert-danger">
                <% resource.errors.full_messages.each do |message| %>
                  <p class="mb-0"><%= message %></p>
                <% end %>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, "Şirket Adı", class: "form-label" %>
              <%= f.text_field :name, class: "form-control bg-dark text-white", placeholder: "Şirketinizin adını girin", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control bg-dark text-white", placeholder: "ornek@sirket.com", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :description, "Şirket Açıklaması", class: "form-label" %>
              <%= f.text_area :description, class: "form-control bg-dark text-white", rows: 3, placeholder: "Şirketiniz hakkında kısa bir açıklama yazın" %>
              <div class="form-text">İsterseniz daha sonra da ekleyebilirsiniz</div>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Şifre", class: "form-label" %>
              <%= f.password_field :password, class: "form-control bg-dark text-white", placeholder: "En az 6 karakter", required: true, minlength: 6 %>
              <div class="form-text">En az 6 karakter olmalıdır</div>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Şifre Tekrar", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control bg-dark text-white", placeholder: "Şifrenizi tekrar girin", required: true %>
            </div>

            <div class="mb-4">
              <%= f.label :logo, "Şirket Logosu", class: "form-label" %>
              <div class="input-group">
                <%= f.file_field :logo, class: "form-control bg-dark text-white", accept: "image/png,image/jpeg,image/jpg" %>
              </div>
              <div class="form-text">PNG, JPEG veya JPG formatında</div>
            </div>

            <%= f.submit "Kayıt Ol", class: "btn btn-primary w-100 mb-3", data: { disable_with: "Kaydediliyor..." } %>
            
            <div class="text-center">
              <%= link_to "Zaten hesabınız var mı? Giriş yapın", new_session_path(resource_name), class: "text-primary text-decoration-none" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background: #0D0C18;
    color: #fff;
  }

  .card {
    background: rgba(13, 12, 24, 0.95) !important;
    border: 1px solid rgba(139, 92, 246, 0.1);
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
  }

  .form-control {
    background: rgba(255, 255, 255, 0.03) !important;
    border: 1px solid rgba(139, 92, 246, 0.2) !important;
    color: #fff !important;
  }

  .form-control:focus {
    background: rgba(255, 255, 255, 0.05) !important;
    border-color: #8B5CF6 !important;
    box-shadow: 0 0 0 0.25rem rgba(139, 92, 246, 0.25) !important;
  }

  .btn-primary {
    background: #8B5CF6;
    border: none;
  }

  .btn-primary:hover {
    background: #7C3AED;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
  }

  .text-primary {
    color: #8B5CF6 !important;
  }

  .form-text {
    color: rgba(255, 255, 255, 0.6);
  }

  .bi-gem-fill {
    color: #8B5CF6;
    filter: drop-shadow(0 0 8px rgba(139, 92, 246, 0.5));
  }
</style>
