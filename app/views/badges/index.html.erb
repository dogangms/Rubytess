    background: linear-gradient(135deg, rgba(156, 39, 176, 0.3), rgba(89, 19, 124, 0.3));
    border-color: rgba(156, 39, 176, 0.5);
    box-shadow: 0 8px 25px rgba(156, 39, 176, 0.3);
}

.ask-ai-btn:hover::before {
    left: 100%;
}

.ask-ai-btn:hover::after {
    opacity: 1;
}

