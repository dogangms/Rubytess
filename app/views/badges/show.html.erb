<script>
document.addEventListener('DOMContentLoaded', function() {
    const badgesGrid = document.getElementById('badgesGrid');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const cards = document.querySelectorAll('.related-badge-card');
    const cardWidth = cards[0]?.offsetWidth || 0;
    const visibleCards = 3;
    let currentIndex = 0;

    // Başlangıçta sadece ilk 3 kartı göster
    updateVisibility();

    function updateVisibility() {
        cards.forEach((card, index) => {
            if (index >= currentIndex && index < currentIndex + visibleCards) {
                card.style.display = 'flex';
            } else {
                card.style.display = 'none';
            }
        });

        // Butonların durumunu güncelle
        prevBtn.disabled = currentIndex === 0;
        nextBtn.disabled = currentIndex >= cards.length - visibleCards;
    }

    prevBtn.addEventListener('click', () => {
        if (currentIndex > 0) {
            currentIndex--;
            updateVisibility();
        }
    });

    nextBtn.addEventListener('click', () => {
        if (currentIndex < cards.length - visibleCards) {
            currentIndex++;
            updateVisibility();
        }
    });

    // Responsive davranış için
    function updateLayout() {
        const containerWidth = badgesGrid.offsetWidth;
        const newVisibleCards = containerWidth < 768 ? 1 : containerWidth < 1200 ? 2 : 3;
        if (visibleCards !== newVisibleCards) {
            visibleCards = newVisibleCards;
            currentIndex = 0;
            updateVisibility();
        }
    }

    window.addEventListener('resize', updateLayout);
    updateLayout();
});
</script>
