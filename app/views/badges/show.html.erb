<div class="animated-background"></div>

<!-- Geri Dön Butonu -->
<div class="back-button-container">
    <a href="<%= badges_path %>" class="back-button">
        <i class="bi bi-arrow-left"></i>
        Geri Dön
    </a>
</div>

<div class="page-wrapper">
    <!-- Üst Kısım: Badge Bilgileri -->
    <div class="badge-header">
        <div class="badge-card">
            <div class="badge-main-info">
                <div class="badge-icon-card">
                    <div class="badge-icon-large">
                        <img src="<%= default_icon %>" alt="<%= @badge.name %>">
                    </div>
                    <div class="badge-category">Software</div>
                    <div class="badge-ratio">x/165 (Ownership ratio)</div>
                    <div class="social-links">
                        <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>" target="_blank" class="social-btn facebook"><i class="bi bi-facebook"></i></a>
                        <a href="https://www.instagram.com/share?url=<%= request.original_url %>" target="_blank" class="social-btn instagram"><i class="bi bi-instagram"></i></a>
                        <a href="https://t.me/share/url?url=<%= request.original_url %>&text=<%= @badge.name %>" target="_blank" class="social-btn telegram"><i class="bi bi-telegram"></i></a>
                        <a href="https://twitter.com/intent/tweet?url=<%= request.original_url %>&text=<%= @badge.name %>" target="_blank" class="social-btn twitter"><i class="bi bi-twitter"></i></a>
                        <a href="https://api.whatsapp.com/send?text=<%= @badge.name %> <%= request.original_url %>" target="_blank" class="social-btn whatsapp"><i class="bi bi-whatsapp"></i></a>
                    </div>
                    
                    <div class="apply-button-container">
                        <a href="/verifications/new" class="apply-button">
                            <i class="bi bi-check-circle"></i>
                            <span>Başvur</span>
                        </a>
                    </div>
                </div>
                <div class="badge-title-section">
                    <h1><%= @badge.name %></h1>
                    <div class="badge-meta">
                        <p class="issued-by">Issued by <%= @badge.issued_by %></p>
                        <p class="badge-description">
                            <%= @badge.description %>
                            <a href="#" class="learn-more">Learn more</a>
                        </p>
                    </div>
                    <div class="badge-tags">
                        <div class="difficulty-btn">
                            Unrated
                            <div class="difficulty-dots">
                                <span class="dot"></span>
                                <span class="dot"></span>
                                <span class="dot"></span>
                                <span class="dot"></span>
                                <span class="dot"></span>
                            </div>
                        </div>
                    </div>
                    <div class="skills-section">
                        <h3>Skills</h3>
                        <div class="skills-grid">
                            <% @badge.skills.each do |skill| %>
                                <span class="skill-tag"><%= skill %></span>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orta Kısım: Detaylı Bilgiler -->
    <div class="badge-content">
        <div class="description-section">
            <h2>Açıklama</h2>
            <p><%= @badge.description %></p>
        </div>
    </div>

    <!-- Alt Kısım: İlgili Rozetler -->
    <div class="related-badges">
        <div class="related-header">
            <h2 class="section-title">Benzer Rozetler</h2>
            <div class="title-underline"></div>
        </div>
        <div class="related-badges-container">
            <button class="nav-btn prev-btn" id="prevBtn">
                <i class="bi bi-chevron-left"></i>
            </button>
            
            <div class="related-badges-grid" id="badgesGrid">
                <% Badge.where.not(id: @badge.id).limit(3).each do |related_badge| %>
                    <div class="related-badge-card">
                        <div class="badge-icon-wrapper">
                            <div class="badge-icon">
                                <img src="<%= default_icon %>" alt="<%= related_badge.name %>">
                            </div>
                            <div class="icon-glow"></div>
                        </div>
                        <div class="badge-content">
                            <h3 class="badge-title"><%= related_badge.name %></h3>
                            <p class="badge-desc"><%= truncate(related_badge.description, length: 100) %></p>
                        </div>
                        <a href="<%= badge_path(related_badge) %>" class="details-btn">
                            <span>Detaylar</span>
                            <i class="bi bi-arrow-right"></i>
                            <div class="btn-hover-effect"></div>
                        </a>
                    </div>
                <% end %>
            </div>

            <button class="nav-btn next-btn" id="nextBtn">
                <i class="bi bi-chevron-right"></i>
            </button>
        </div>

        <style>
        .related-badges {
            padding: 2rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 1.5rem;
            backdrop-filter: blur(10px);
            margin-top: 3rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .section-title {
            font-size: 2.2rem;
            color: #fff;
            text-align: center;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .title-underline {
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, #4776E6, #8E54E9);
            margin: 0 auto;
            border-radius: 2px;
        }

        .related-badges-container {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            margin-top: 2.5rem;
        }

        .related-badges-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            padding: 1rem;
        }

        .related-badge-card {
            background: linear-gradient(145deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
            border-radius: 1.2rem;
            padding: 2rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .related-badge-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
            background: linear-gradient(145deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.08));
        }

        .badge-icon-wrapper {
            position: relative;
            width: 100px;
            height: 100px;
            margin: 0 auto 1.5rem;
        }

        .badge-icon {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            padding: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 1;
        }

        .icon-glow {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 120%;
            height: 120%;
            background: radial-gradient(circle, rgba(71, 118, 230, 0.3), transparent 70%);
            border-radius: 50%;
            z-index: 0;
        }

        .badge-title {
            font-size: 1.4rem;
            color: #fff;
            margin-bottom: 0.8rem;
            text-align: center;
        }

        .badge-desc {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.95rem;
            line-height: 1.6;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .details-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            background: linear-gradient(90deg, #4776E6, #8E54E9);
            color: white;
            text-decoration: none;
            padding: 0.8rem 1.5rem;
            border-radius: 0.8rem;
            font-weight: 500;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .btn-hover-effect {
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .details-btn:hover .btn-hover-effect {
            left: 100%;
        }

        .nav-btn {
            width: 3rem;
            height: 3rem;
            border-radius: 50%;
            border: none;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .nav-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: scale(1.1);
        }
        </style>
    </div>
</div>

<!-- Popup Modal -->
<div id="descriptionModal" class="modal">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h2><%= @badge.name %></h2>
        <div class="modal-body">
            <p><%= @badge.description %></p>
        </div>
    </div>
</div>

<!-- Sağ kart yapısı -->
