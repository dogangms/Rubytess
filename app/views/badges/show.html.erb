<script>
document.addEventListener('DOMContentLoaded', function() {
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const grid = document.getElementById('badgesGrid');
    let currentPage = 0;
    let totalPages = 0;
    
    // İlk yüklemede toplam sayfa sayısını al
    fetchTotalBadges();
    
    prevBtn.addEventListener('click', () => {
        if (currentPage > 0) {
            currentPage--;
            loadRelatedBadges(currentPage);
            updateButtonStates();
        }
    });
    
    nextBtn.addEventListener('click', () => {
        if (currentPage < totalPages - 1) {
            currentPage++;
            loadRelatedBadges(currentPage);
            updateButtonStates();
        }
    });
    
    function fetchTotalBadges() {
        fetch(`/badges/<%= @badge.id %>/related?count=true`)
            .then(response => response.json())
            .then(data => {
                totalPages = Math.ceil(data.total_count / 3);
                updateButtonStates();
            })
            .catch(error => {
                console.error('Error fetching total badges:', error);
            });
    }
    
    function loadRelatedBadges(page) {
        grid.style.opacity = '0.5';
        fetch(`/badges/<%= @badge.id %>/related?page=${page}`)
            .then(response => response.json())
            .then(data => {
                grid.innerHTML = data.badges.map(badge => `
                    <div class="related-badge-card">
                        <div class="badge-icon">
                            <img src="${badge.icon_url || '<%= default_icon %>'}" alt="${badge.name}">
                        </div>
                        <div class="badge-content">
                            <h3>${badge.name}</h3>
                            <p>${badge.description.substring(0, 100)}${badge.description.length > 100 ? '...' : ''}</p>
                        </div>
                        <a href="/badges/${badge.id}" class="details-btn">
                            <span>Detaylar</span>
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                `).join('');
                grid.style.opacity = '1';
            })
            .catch(error => {
                console.error('Error loading badges:', error);
                grid.style.opacity = '1';
            });
    }
    
    function updateButtonStates() {
        prevBtn.disabled = currentPage === 0;
        nextBtn.disabled = currentPage === totalPages - 1;
        
        prevBtn.style.visibility = currentPage === 0 ? 'hidden' : 'visible';
        nextBtn.style.visibility = currentPage === totalPages - 1 ? 'hidden' : 'visible';
    }
});
</script>
