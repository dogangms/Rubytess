<style>
/* Renk değişkenleri */
:root {
    --primary: #9C27B0;
    --primary-light: rgba(156, 39, 176, 0.1);
    --primary-border: rgba(156, 39, 176, 0.2);
    --text-dark: #2D1B4E;
    --text-light: #666666;
    --bg-light: #F8F9FA;
    --bg-white: #FFFFFF;
    --shadow: rgba(0, 0, 0, 0.08);
}

.animated-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 50% 50%, 
        #040B14 0%,
        #061024 25%,
        #081537 50%,
        #040B14 75%,
        #020508 100%
    );
    background-size: 300% 300%;
    animation: moveGradient 20s alternate infinite;
    z-index: -1;
}

@keyframes moveGradient {
    0% {
        background-position: 0% 0%;
    }
    25% {
        background-position: 100% 50%;
    }
    50% {
        background-position: 50% 100%;
    }
    75% {
        background-position: 0% 50%;
    }
    100% {
        background-position: 50% 0%;
    }
}

