    <div class="related-badges">
        <div class="related-header">
            <h2 class="section-title">Similar Badges</h2>
            <div class="title-underline"></div>
        </div>
        <div class="related-badges-container">
            <button class="nav-btn prev-btn" id="prevBtn">
                <i class="bi bi-chevron-left"></i>
            </button>
            
            <div class="related-badges-grid" id="badgesGrid">
                <% Badge.where.not(id: @badge.id).each do |related_badge| %>
                    <div class="related-badge-card">
                        <div class="badge-icon-wrapper">
                            <div class="badge-icon">
                                <img src="<%= default_icon %>" >
                            </div>
                            <div class="icon-glow"></div>
                        </div>
                        <div class="badge-content">
                            <h3 class="badge-title"><%= related_badge.name %></h3>
                            <p class="badge-desc"><%= truncate(related_badge.description, length: 100) %></p>
                        </div>
                        <a href="<%= badge_path(related_badge) %>" class="details-btn">
                            <span>Details</span>
                            <i class="bi bi-arrow-right"></i>
                            <div class="btn-hover-effect"></div>
                        </a>
                    </div>
                <% end %>
            </div>

            <button class="nav-btn next-btn" id="nextBtn">
                <i class="bi bi-chevron-right"></i>
            </button>
        </div>
    </div>
