                        <h3>Skills</h3>
                        <div class="skills-grid">
                            <% @badge.skills.each do |skill| %>
                                <span class="skill-tag"><%= skill %></span>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

