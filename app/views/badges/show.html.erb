}

@keyframes logoutIconPulse {
  0% {
    transform: scale(1.2) rotate(10deg);
    filter: drop-shadow(0 0 20px rgba(239, 68, 68, 0.8));
  }
  50% {
    transform: scale(1.3) rotate(-5deg);
    filter: drop-shadow(0 0 30px rgba(239, 68, 68, 1));
  }
  100% {
    transform: scale(1.2) rotate(10deg);
    filter: drop-shadow(0 0 20px rgba(239, 68, 68, 0.8));
  }
}

.logout-btn i {
  font-size: 1.25rem;
  min-width: 24px;
  max-width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: all 0.4s ease;
  position: relative;
  z-index: 1;
}

.logout-btn span {
  font-size: 0.95rem;
  font-weight: 500;
  opacity: 0;
  transform: translateX(-10px);
  transition: all 0.4s ease;
}

.sidebar:hover .logout-btn span {
  opacity: 1;
  transform: translateX(0);
}
</style>


<div class="page-wrapper">
    <div class="badge-header">
        <div class="badge-card">
            <div class="badge-main-info">
                <div class="badge-icon-card">
                    <div class="badge-icon-large">
                        <img src="<%= default_icon %>" alt="<%= @badge.name %>">
                    </div>
                    <div class="badge-category">Software</div>
                    <div class="badge-ratio">x/165 (Ownership ratio)</div>
                    <div class="social-links">
