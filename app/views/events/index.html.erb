<h1>Events</h1>

<!-- New Event Form -->
<div class="event-form">
  <h3 class="form-title">Add New Event</h3>
  <%= form_with model: @event, url: events_path, local: true do |form| %>
    <% if @event.errors.any? %>
      <div class="error-messages">
        <h2>Errors:</h2>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :content, "Event Name" %>
      <%= form.text_field :content, required: true, class: "form-input" %>
    </div>

    <div>
      <%= form.label :description, "Event Description" %>
      <%= form.text_field :description, required: true, class: "form-input" %>
    </div>

    <div class="datetime-select-container">
      <%= form.label :date, "Date and Time" %>
      <%= form.datetime_select :date, 
            order: [:day, :month, :year, :hour, :minute], # İstediğiniz sıralama
            required: true,
            prompt: { day: 'Day', month: 'Month', year: 'Year', hour: 'Hour', minute: 'Minute', },
            class: "datetime-input" %>
    </div>


    <div>
      <%= form.submit "Add", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<hr>

<!-- Events List -->
<div class="events-list">
  <% @events.each do |event| %>
    <div class="event-item">
      <!-- Date Box -->
      <div class="event-date">
        <div class="date-content">
          <span class="date"><%= event.date.strftime("%d %b") %></span>
          <span class="time"><i class="bi bi-clock"></i> <%= event.date.strftime("%H:%M") %></span>
        </div>
      </div>
      <!-- Event Information -->
      <div class="event-info">
        <h3 class="event-title"><%= event.content %></h3>
        <p class="event-description"><%= event.description %></p>
      </div>
      <!-- Join/Delete Buttons -->
      <div class="event-actions">
        <% if event.user == current_user %>
          <%= button_to "Delete", event_path(event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }, class: "btn-action" %>
        <% else %>
          <% unless current_user.attended_events.include?(event) %>
            <%= button_to "Join", join_event_path(event), method: :post, class: "btn-action" %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

