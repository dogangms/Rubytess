      </nav>
    </div>

    <!-- Main Content -->
    <main>
      <!-- Dashboard Header -->
      <div class="dashboard-header">
        <div class="container">
          <div class="d-flex justify-content-between align-items-center">
            <div class="company-info">
              <div class="company-logo">
                <% if current_company.logo.attached? %>
                  <%= image_tag current_company.logo %>
                <% else %>
                  <div class="bg-dark d-flex align-items-center justify-content-center h-100">
                    <i class="bi bi-building text-primary" style="font-size: 2rem;"></i>
                  </div>
                <% end %>
              </div>
              <div class="company-details">
                <h1><%= current_company.name %></h1>
                <p><%= current_company.email %></p>
              </div>
            </div>
            <div class="btn-group">
              <%= link_to edit_company_registration_path, class: "btn btn-outline-light" do %>
                <i class="bi bi-pencil-square me-2"></i>
                Profili DÃ¼zenle
              <% end %>
              <%= link_to new_position_path, class: "btn btn-primary" do %>
                <i class="bi bi-plus-lg"></i>
                <span>Yeni Ä°lan OluÅŸtur</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <!-- Stats Row -->
        <div class="row g-4 mb-4">
          <div class="col-md-4">
            <div class="dashboard-card">
              <div class="stat-card">
                <h4><%= @positions.count %></h4>
                <p>Aktif Ä°lan</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="dashboard-card">
              <div class="stat-card">
                <h4><%= @total_applications %></h4>
                <p>Toplam BaÅŸvuru</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="dashboard-card">
              <div class="stat-card">
                <h4><%= @total_views %></h4>
                <p>Toplam GÃ¶rÃ¼ntÃ¼lenme</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Ä°lanlarÄ±m Section -->
        <div class="card bg-dark border-0 rounded-4 mb-4 position-relative overflow-hidden">
          <div class="card-header border-0 bg-transparent">
            <h3 class="text-white mb-0 d-flex align-items-center gap-2">
              <i class="bi bi-briefcase text-primary"></i>
              Ä°lanlarÄ±m
            </h3>
          </div>
          <div class="card-body">
            <% @positions.each do |position| %>
              <div class="position-card bg-dark-subtle p-4 rounded-4 mb-4">
                <div class="d-flex justify-content-between align-items-start mb-4">
                  <div>
                    <h4 class="text-white mb-2"><%= position.title %></h4>
                    <div class="text-white-50">
                      <i class="bi bi-calendar me-2"></i><%= position.application_deadline&.strftime("%d.%m.%Y") %>
