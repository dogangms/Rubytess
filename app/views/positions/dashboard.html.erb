                    </div>
                  </div>
                  <div class="d-flex gap-2">
                    <%= link_to edit_position_path(position), class: "btn btn-outline-light btn-sm" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= button_to position_path(position), method: :delete, class: "btn btn-outline-danger btn-sm", data: { confirm: "Bu ilanÄ± silmek istediÄŸinize emin misiniz?" } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </div>

                <!-- BaÅŸvuranlar Section -->
                <div class="applications-section mt-4">
                  <h5 class="text-primary mb-3">
                    <i class="bi bi-people me-2"></i>
                    BaÅŸvuranlar
                  </h5>
                  
                  <% if position.applications.any? %>
                    <div class="table-responsive">
                      <table class="table table-dark table-hover">
                        <thead>
                          <tr>
                            <th>Ä°sim</th>
                            <th>Email</th>
                            <th>BaÅŸvuru Tarihi</th>
                            <th>CV</th>
                            <th>Ä°ÅŸlemler</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% position.applications.each do |application| %>
                            <tr>
                              <td class="text-white"><%= application.user.name %></td>
                              <td class="text-white-50"><%= application.user.email %></td>
                              <td class="text-white-50"><%= application.created_at.strftime("%d.%m.%Y %H:%M") %></td>
                              <td>
                                <% if application.cv.attached? %>
                                  <%= link_to rails_blob_path(application.cv, disposition: "attachment"), class: "btn btn-outline-primary btn-sm" do %>
                                    <i class="bi bi-download me-1"></i>CV Ä°ndir
                                  <% end %>
                                <% else %>
                                  <span class="text-muted">CV Yok</span>
                                <% end %>
                              </td>
                              <td>
                                <div class="btn-group">
                                  <%= link_to "#", class: "btn btn-outline-success btn-sm", title: "Kabul Et" do %>
                                    <i class="bi bi-check-lg"></i>
                                  <% end %>
                                  <%= link_to "#", class: "btn btn-outline-danger btn-sm", title: "Reddet" do %>
                                    <i class="bi bi-x-lg"></i>
                                  <% end %>
                                </div>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                  <% else %>
                    <div class="text-center text-white-50 py-4">
                      <i class="bi bi-inbox display-4 d-block mb-3"></i>
                      <p class="mb-0">HenÃ¼z baÅŸvuru bulunmuyor.</p>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
