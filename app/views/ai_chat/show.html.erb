  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: all 0.4s ease;
  position: relative;
  z-index: 1;
}

.logout-btn span {
  font-size: 0.95rem;
  font-weight: 500;
  opacity: 0;
  transform: translateX(-10px);
  transition: all 0.4s ease;
}

.sidebar:hover .logout-btn span {
  opacity: 1;
  transform: translateX(0);
}
</style>




