<script>
document.addEventListener('DOMContentLoaded', function() {
    const chatForm = document.getElementById('chatForm');
    const messageInput = document.getElementById('messageInput');
    const chatMessages = document.getElementById('chatMessages');
    const quickQuestions = document.getElementById('quickQuestions');
    
    // Hazır soru butonları için event listener
    quickQuestions.addEventListener('click', function(e) {
        const btn = e.target.closest('.quick-question-btn');
        if (btn) {
            const question = btn.dataset.question;
            messageInput.value = question;
            sendMessage(question);
        }
    });

    chatForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const message = messageInput.value.trim();
        if (!message) return;
        sendMessage(message);
    });

    function sendMessage(message) {
        // Kullanıcı mesajını ekle
        addMessage(message, 'user');
        messageInput.value = '';

        // Yükleniyor mesajını göster
        const loadingMessage = addLoadingMessage();

        // AI yanıtı için API çağrısı
        fetch('/api/chat', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
            },
            body: JSON.stringify({
                message: message,
                badge_id: '<%= @badge.id %>',
                context: {
                    badge_name: '<%= @badge.name %>',
                    badge_description: '<%= @badge.description %>'
                }
            })
        })
        .then(response => response.json())
        .then(data => {
            // Yükleniyor mesajını kaldır
            loadingMessage.remove();
            // AI yanıtını ekle
            addMessage(data.response, 'ai');
        })
        .catch(error => {
            // Yükleniyor mesajını kaldır
            loadingMessage.remove();
            // Hata mesajını ekle
            addMessage('Üzgünüm, bir hata oluştu. Lütfen tekrar deneyin.', 'ai');
            console.error('Error:', error);
        });
    }

    function addMessage(content, type) {
        const messageDiv = document.createElement('div');
        messageDiv.className = `message ${type}-message`;
        
        const time = new Date().toLocaleTimeString('tr-TR', { 
            hour: '2-digit', 
            minute: '2-digit' 
        });
        
        messageDiv.innerHTML = `
            <div class="message-avatar">
                <i class="bi bi-${type === 'user' ? 'person' : 'robot'}"></i>
            </div>
            <div class="message-content">
                <p>${content}</p>
                <div class="message-footer">
                    <div class="message-time">${time}</div>
                    ${type === 'ai' ? `
                        <a href="/forum_posts/new?ai_response=${encodeURIComponent(content)}" class="share-button">
                            <i class="bi bi-share"></i>
                            Paylaş
                        </a>
                    ` : ''}
                </div>
            </div>
        `;
        
        chatMessages.appendChild(messageDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
        return messageDiv;
    }

    function addLoadingMessage() {
        const loadingDiv = document.createElement('div');
        loadingDiv.className = 'message ai-message loading';
        
        loadingDiv.innerHTML = `
            <div class="message-avatar">
                <i class="bi bi-robot"></i>
            </div>
            <div class="message-content">
                <div class="typing-indicator">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        `;
        
        chatMessages.appendChild(loadingDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
        return loadingDiv;
    }

    function shareMessage(content) {
        // Forum sayfasına yönlendir
        window.location.href = `/forum_posts/new?ai_response=${encodeURIComponent(content)}`;
    }
});
</script> 