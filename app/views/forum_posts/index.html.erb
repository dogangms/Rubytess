    box-shadow: 0 8px 32px rgba(156, 39, 176, 0.2);
}

.search-wrapper {
    display: flex;
    gap: 1.5rem;
    align-items: stretch;
    flex-wrap: wrap;
    width: 100%;
}

.search-input-group {
    flex: 1;
    display: flex;
    gap: 1.5rem;
    min-width: 300px;
    width: 100%;
}

.input-with-icon,
.select-with-icon {
    position: relative;
    flex: 1;
    min-width: 200px;
}

.input-with-icon i,
.select-with-icon i:first-child {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.5);
    transition: color 0.3s ease;
    pointer-events: none;
}

.dropdown-icon {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.5);
    transition: all 0.3s ease;
    pointer-events: none;
}

.search-input,
.category-select {
    width: 100%;
    padding: 0.875rem 1rem 0.875rem 2.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: #fff;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    box-sizing: border-box;
}

.search-input:focus,
.category-select:focus {
    background: rgba(255, 255, 255, 0.1);
    border-color: #9C27B0;
    outline: none;
    box-shadow: 0 0 0 3px rgba(156, 39, 176, 0.25);
}

.search-input:focus + i,
.category-select:focus + i {
    color: #9C27B0;
}

.category-select {
    appearance: none;
    cursor: pointer;
}

.button-group {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: nowrap;
}

.search-btn,
.new-post-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border: none;
    border-radius: 12px;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    white-space: nowrap;
    min-width: 120px;
}

.search-btn {
    background: linear-gradient(135deg, #9C27B0, #673AB7);
    color: white;
}

.new-post-btn {
    background: rgba(156, 39, 176, 0.15);
    border: 1px solid rgba(156, 39, 176, 0.25);
    color: white;
}

.search-btn:hover,
.new-post-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(156, 39, 176, 0.3);
}

.search-btn:active,
.new-post-btn:active {
    transform: translateY(0);
}

@media (max-width: 768px) {
    .search-wrapper {
        flex-direction: column;
        gap: 1rem;
    }
    
    .search-input-group {
        flex-direction: column;
        gap: 1rem;
    }
    
    .button-group {
        flex-direction: column;
        width: 100%;
    }
    
    .search-btn,
    .new-post-btn {
        width: 100%;
        justify-content: center;
    }

    .post-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }

    .post-footer {
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
    }

    .post-stats {
        width: 100%;
        justify-content: space-between;
    }

    .read-more-button {
        width: 100%;
        justify-content: center;
    }
}


@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.02); }
    100% { transform: scale(1); }
}

.search-btn:hover,
.new-post-btn:hover {
    animation: pulse 1s infinite;
}

.category-select:focus + .dropdown-icon {
    transform: translateY(-50%) rotate(180deg);
    color: #9C27B0;
}


@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.forum-header,
.stat-card,
.search-container,
.post-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeIn 0.5s ease-out forwards;
}

.stat-card:nth-child(1) { animation-delay: 0.1s; }
.stat-card:nth-child(2) { animation-delay: 0.2s; }
.stat-card:nth-child(3) { animation-delay: 0.3s; }

.post-card {
    animation-delay: calc(var(--card-index, 0) * 0.1s);
}


.category-tag,
.author-avatar,
.stat-item {
    transition: all 0.3s ease;
}

.category-tag:hover,
.author-avatar:hover,
.stat-item:hover {
    transform: scale(1.05);
    filter: brightness(1.2);
}


@keyframes shimmer {
    0% { background-position: -1000px 0; }
    100% { background-position: 1000px 0; }
}

.loading {
    background: linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.05) 25%,
        rgba(255, 255, 255, 0.1) 50%,
        rgba(255, 255, 255, 0.05) 75%
    );
    background-size: 1000px 100%;
    animation: shimmer 2s infinite linear;
}

.back-button-container {
  position: fixed;
  top: 20px;
  left: 20px;
  z-index: 100;
}

.back-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.8rem 1.5rem;
  background: rgba(156, 39, 176, 0.15);
  border: 1px solid rgba(156, 39, 176, 0.25);
  border-radius: 12px;
  color: white;
  text-decoration: none;
  font-size: 0.95rem;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.back-button:hover {
  background: rgba(156, 39, 176, 0.25);
  transform: translateX(-5px);
  box-shadow: 0 4px 15px rgba(156, 39, 176, 0.3);
}

.back-button i {
  font-size: 1.1rem;
}

@media (max-width: 768px) {
  .back-button-container {
    top: 10px;
    left: 10px;
  }
  
  .back-button {
    padding: 0.6rem 1.2rem;
    font-size: 0.9rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Post kartlarına index ekle
    document.querySelectorAll('.post-card').forEach((card, index) => {
        card.style.setProperty('--card-index', index);
    });

    // Scroll animasyonları
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, {
        threshold: 0.1
    });

    document.querySelectorAll('.post-card, .stat-card').forEach(el => {
        observer.observe(el);
    });

    // Input ve Select efektleri
    const inputs = document.querySelectorAll('.search-input, .category-select');
    inputs.forEach(input => {
        const container = input.parentElement;
        
        input.addEventListener('focus', () => {
            container.style.transform = 'scale(1.02)';
            container.style.zIndex = '1';
        });

        input.addEventListener('blur', () => {
            container.style.transform = 'scale(1)';
            container.style.zIndex = '0';
        });
    });
});
</script> 