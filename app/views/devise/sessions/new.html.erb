<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Google Fonts - Orbitron -->
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
      background: linear-gradient(45deg, #0a0a1f, #13111C, #0d1a2d);
      background-size: 400% 400%;
      animation: gradientBG 15s ease infinite;
      color: #fff;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    @keyframes gradientBG {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .login-container {
      width: 100%;
      max-width: 420px;
      padding: 2rem;
    }

    .login-card {
      background: rgba(13, 12, 24, 0.95);
      border: 1px solid rgba(139, 92, 246, 0.1);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-radius: 16px;
      padding: 2rem;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
      transition: all 0.3s ease;
    }

    .login-card:hover {
      border-color: rgba(139, 92, 246, 0.2);
      box-shadow: 0 12px 40px rgba(139, 92, 246, 0.1);
    }

    .login-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .login-logo {
      font-family: 'Orbitron', sans-serif;
      font-size: 2rem;
      font-weight: 600;
      color: #8B5CF6;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .login-logo i {
      font-size: 2rem;
      filter: drop-shadow(0 0 8px rgba(139, 92, 246, 0.5));
    }

    .form-control {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(139, 92, 246, 0.1);
      border-radius: 12px;
      color: #fff;
      padding: 0.75rem 1rem;
      margin-bottom: 1rem;
      transition: all 0.3s ease;
    }

    .form-control:focus {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(139, 92, 246, 0.3);
      box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1);
      color: #fff;
    }

    .form-control::placeholder {
      color: rgba(255, 255, 255, 0.5);
    }

    .btn-primary {
      background: linear-gradient(135deg, #8B5CF6, #7C3AED);
      border: none;
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 500;
      width: 100%;
      margin-bottom: 1rem;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(139, 92, 246, 0.3);
    }

    .login-footer {
      text-align: center;
      margin-top: 1.5rem;
    }

    .login-footer a {
      color: #8B5CF6;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .login-footer a:hover {
      color: #7C3AED;
      text-shadow: 0 0 10px rgba(139, 92, 246, 0.5);
    }

    .login-divider {
      display: flex;
      align-items: center;
      text-align: center;
      margin: 1.5rem 0;
      color: rgba(255, 255, 255, 0.5);
    }

    .login-divider::before,
    .login-divider::after {
      content: '';
      flex: 1;
      border-bottom: 1px solid rgba(139, 92, 246, 0.2);
    }

    .login-divider span {
      padding: 0 1rem;
    }

    .btn-outline-light {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(139, 92, 246, 0.2);
      color: rgba(255, 255, 255, 0.9);
      border-radius: 12px;
      padding: 0.75rem 1.5rem;
      font-weight: 500;
      width: 100%;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .btn-outline-light:hover {
      background: rgba(139, 92, 246, 0.1);
      border-color: rgba(139, 92, 246, 0.4);
      color: #8B5CF6;
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(139, 92, 246, 0.15);
    }

    .btn-outline-light i {
      font-size: 1.2rem;
    }

    .remember-me {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 1rem;
      color: rgba(255, 255, 255, 0.7);
    }

    .remember-me input[type="checkbox"] {
      width: 1rem;
      height: 1rem;
      border-radius: 4px;
      border: 1px solid rgba(139, 92, 246, 0.3);
      background-color: transparent;
      cursor: pointer;
    }

    .remember-me input[type="checkbox"]:checked {
      background-color: #8B5CF6;
      border-color: #8B5CF6;
    }

    .error-message {
      color: #EF4444;
      font-size: 0.9rem;
      margin-bottom: 1rem;
      padding: 0.75rem;
      background: rgba(239, 68, 68, 0.1);
      border: 1px solid rgba(239, 68, 68, 0.2);
      border-radius: 8px;
    }
  </style>
</head>

<body>
  <div class="login-container">
    <div class="login-card">
      <div class="login-header">
        <div class="login-logo">
          <i class="bi bi-gem-fill"></i>
          <span>Rubytes</span>
        </div>
        <h2 class="h4 text-white mb-3">Welcome</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% if flash[:alert] %>
          <div class="error-message">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
        </div>

        <div class="mb-3">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Remember me" %>
          </div>
        <% end %>

        <%= f.submit "Sign In", class: "btn btn-primary" %>

        <div class="login-divider">
          <span>or</span>
        </div>

        <%= link_to new_company_session_path, class: "btn btn-outline-light mb-3" do %>
          <i class="bi bi-building"></i>
          Company Login
        <% end %>

        <%= link_to new_user_registration_path, class: "btn btn-outline-light" do %>
          <i class="bi bi-person-plus"></i>
          Create Account
        <% end %>

        <div class="login-footer">
          <%= link_to "Forgot Password?", new_password_path(resource_name) %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 