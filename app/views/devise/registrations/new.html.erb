<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="px-6 py-8">
      <h2 class="text-2xl font-bold text-center text-gray-800 mb-8">Kayıt Ol</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <% if resource.errors.any? %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.label :name, "Ad Soyad", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, autofocus: true, 
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :email, "E-posta", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autocomplete: "email", 
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :role, "Rol", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :role, [['Öğrenci', 'student'], ['Akademisyen', 'academic']], {}, 
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, "Şifre", class: "block text-sm font-medium text-gray-700" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-500">(<%= @minimum_password_length %> karakter minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="mb-6">
          <%= f.label :password_confirmation, "Şifre Tekrar", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <%= f.submit "Kayıt Ol", 
            class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% end %>

      <div class="mt-6">
        <%= link_to "Giriş Yap", new_session_path(resource_name), 
            class: "text-sm text-indigo-600 hover:text-indigo-500" %>
      </div>
    </div>
  </div>
</div> 

<style>

/* Genel Ayarlar */
body {
  margin: 0;
  padding: 0;
  overflow: hidden;
  background: linear-gradient(45deg, #0a0a1f, #13111C, #0d1a2d);
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #fff;
  font-family: 'Arial', sans-serif;
}

/* Başlık Tasarımı */
h1 {
  position: absolute;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 2.5rem;
  font-family: 'Orbitron', sans-serif;
  color: #ffffff;
  text-shadow: 0 4px 12px rgba(139, 92, 246, 0.8);
  text-transform: uppercase;
  margin: 0;
}

/* Form Kutusu */
form {
  width: 100%;
  max-width: 400px;
  padding: 2rem;
  background: rgba(13, 12, 24, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 20px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(139, 92, 246, 0.2);
  animation: fadeIn 0.6s ease-in-out;
  text-align: center;
}

/* Form Alanları */
form div {
  margin-bottom: 1.5rem;
}

form label {
  display: block;
  text-align: left;
  color: rgba(255, 255, 255, 0.7);
  font-size: 1rem;
  margin-bottom: 0.5rem;
}

form input,
form select {
  width: 100%;
  padding: 0.8rem;
  font-size: 1rem;
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(139, 92, 246, 0.3);
  border-radius: 8px;
  box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

form input:focus,
form select:focus {
  outline: none;
  border-color: #8B5CF6;
  background: rgba(139, 92, 246, 0.1);
  box-shadow: 
    0 0 0 4px rgba(139, 92, 246, 0.2),
    inset 0 1px 4px rgba(0, 0, 0, 0.2);
}

/* Hata Mesajları */
#error_explanation {
  color: #FF6B6B;
  font-size: 1rem;
  background: rgba(255, 0, 0, 0.1);
  padding: 1rem;
  border: 1px solid rgba(255, 0, 0, 0.3);
  border-radius: 8px;
  margin-bottom: 1rem;
  text-align: left;
}

/* Kayıt Butonu */
form input[type="submit"] {
  width: 100%;
  padding: 1rem;
  font-size: 1.2rem;
  font-weight: bold;
  text-transform: uppercase;
  color: #ffffff;
  background: linear-gradient(135deg, #8B5CF6, #6D28D9);
  border: none;
  border-radius: 12px;
  cursor: pointer;
  box-shadow: 
    0 4px 12px rgba(139, 92, 246, 0.3),
    inset 0 2px 4px rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease-in-out;
}

form input[type="submit"]:hover {
  background: linear-gradient(135deg, #9061F9, #7E3AF2);
  transform: translateY(-3px);
  box-shadow: 0 6px 24px rgba(139, 92, 246, 0.5);
}

form input[type="submit"]:active {
  background: linear-gradient(135deg, #6D28D9, #4C1D95);
  transform: translateY(2px);
}

/* Fade-in Efekti */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


</style>