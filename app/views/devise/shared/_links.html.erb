<%- if controller_name != 'sessions' %>
  <%= link_to "Giriş Yap", new_session_path(resource_name), 
      class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Kayıt Ol", new_registration_path(resource_name), 
      class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Şifremi Unuttum", new_password_path(resource_name), 
      class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Onay talimatlarını almadınız mı?", new_confirmation_path(resource_name), 
      class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Kilit açma talimatlarını almadınız mı?", new_unlock_path(resource_name), 
      class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "#{OmniAuth::Utils.camelize(provider)} ile giriş yap", omniauth_authorize_path(resource_name, provider), 
        class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
  <% end %>
<% end %> 