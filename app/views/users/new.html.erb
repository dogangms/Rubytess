<%= form_with model: @user, local: true do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "hata") %> bulundu:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, "E-posta" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, "Şifre" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Şifre Onayı" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :role, "Rol" %>
    <%= form.select :role, [['Student', 'student'], ['Academic', 'academic']] %>
  </div>

  <div>
    <%= form.submit "Kayıt Ol" %>
  </div>
<% end %>
