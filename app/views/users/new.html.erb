<h1>REGISTER</h1>
<%= stylesheet_link_tag 'register' %>


<%= form_with model: @user, local: true do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> found:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, "E-mail" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, "Password" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Confirm Password" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :role, "Role" %>
    <%= form.select :role, [['Student', 'student'], ['Academic', 'academic']] %>
  </div>

  <div>
    <%= form.submit "Register" %>
  </div>
<% end %>




<style>

/* Genel Ayarlar */
body {
  margin: 0;
  padding: 0;
  overflow: hidden;
  background: linear-gradient(45deg, #0a0a1f, #13111C, #0d1a2d);
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #fff;
  font-family: 'Arial', sans-serif;
}

/* Başlık Tasarımı */
h1 {
  position: absolute;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 2.5rem;
  font-family: 'Orbitron', sans-serif;
  color: #ffffff;
  text-shadow: 0 4px 12px rgba(139, 92, 246, 0.8);
  text-transform: uppercase;
  margin: 0;
}

/* Form Kutusu */
form {
  width: 100%;
  max-width: 400px;
  padding: 2rem;
  background: rgba(13, 12, 24, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 20px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(139, 92, 246, 0.2);
  animation: fadeIn 0.6s ease-in-out;
  text-align: center;
}

/* Form Alanları */
form div {
  margin-bottom: 1.5rem;
}

form label {
  display: block;
  text-align: left;
  color: rgba(255, 255, 255, 0.7);
  font-size: 1rem;
  margin-bottom: 0.5rem;
}

form input,
form select {
  width: 100%;
  padding: 0.8rem;
  font-size: 1rem;
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(139, 92, 246, 0.3);
  border-radius: 8px;
  box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

form input:focus,
form select:focus {
  outline: none;
  border-color: #8B5CF6;
  background: rgba(139, 92, 246, 0.1);
  box-shadow: 
    0 0 0 4px rgba(139, 92, 246, 0.2),
    inset 0 1px 4px rgba(0, 0, 0, 0.2);
}

/* Hata Mesajları */
#error_explanation {
  color: #FF6B6B;
  font-size: 1rem;
  background: rgba(255, 0, 0, 0.1);
  padding: 1rem;
  border: 1px solid rgba(255, 0, 0, 0.3);
  border-radius: 8px;
  margin-bottom: 1rem;
  text-align: left;
}

/* Kayıt Butonu */
form input[type="submit"] {
  width: 100%;
  padding: 1rem;
  font-size: 1.2rem;
  font-weight: bold;
  text-transform: uppercase;
  color: #ffffff;
  background: linear-gradient(135deg, #8B5CF6, #6D28D9);
  border: none;
  border-radius: 12px;
  cursor: pointer;
  box-shadow: 
    0 4px 12px rgba(139, 92, 246, 0.3),
    inset 0 2px 4px rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease-in-out;
}

form input[type="submit"]:hover {
  background: linear-gradient(135deg, #9061F9, #7E3AF2);
  transform: translateY(-3px);
  box-shadow: 0 6px 24px rgba(139, 92, 246, 0.5);
}

form input[type="submit"]:active {
  background: linear-gradient(135deg, #6D28D9, #4C1D95);
  transform: translateY(2px);
}

/* Fade-in Efekti */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


</style>